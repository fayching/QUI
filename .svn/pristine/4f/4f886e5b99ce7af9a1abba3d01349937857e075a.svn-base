
@import "../animate/animate";

/**
 * 选项卡
 */

.ui-tab{
    width: 100%;
    overflow: hidden;
}

.ui-tab .ui-tab-nav{
    position:relative;
    top: 0px;
    width: 100%;
    background-color: $default-bg;
    display: box;
    display: -webkit-box;
    font-size: $font-size-info;
    height: $tab-height;
    box-sizing: border-box;
}

.ui-tab .ui-tab-content{
    display: -webkit-box;
    -webkit-box-align: center;
    -webkit-box-pack:center;
    margin-top: 0px;
    height: 80px;
}
.ui-tab-content > li {
    -webkit-box-flex: 1;
    width: 100%;
    text-align: center; 
}
.ui-tab-nav li{
    height: $tab-height;
    line-height: $tab-height;
	box-flex: 1;
	-webkit-box-flex: 1;
	text-align: center;
	color: $txt-info;
    box-sizing: border-box;
    border-bottom: 2px solid transparent;
    width: 100%;
    font-size: 16px;
}
.ui-tab-nav li.current{
    color: $tab-current-color;
}
.ui-tab-nav li:active{
    opacity: .8;
}



//
.ui-tab-nav .animate_nav{
    position: absolute;
    bottom:0px;
    left: 0px;
    width: 25%;
    color: $tab-current-color;
    border-bottom: 3px $tab-current-border solid;
}

.ui-tab-bisection .animate_nav{
    width: 50%;
}
.ui-tab-trisection .animate_nav{
    width: 33.3%;
}
